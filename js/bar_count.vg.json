{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Total number of fatal shark attacks by state",
    "background":"#FFDBBB",
    "width": 150,
    "height": 100,
    "data": {
        "url": "https://raw.githubusercontent.com/jiseokshin/FIT3179_A2/refs/heads/main/data/fatal_shark_attacks_exact_location.csv"
    },
    "mark": "bar",
    "encoding": {
      "x": { 
        "aggregate": "count", 
        "type": "quantitative", 
        "title": "Total fatal attacks"
      },
      "y": { "field": "state", "type": "nominal", "title": "State" },
      "color": {
          "field": "state", 
          "type": "nominal",
          "legend": null,
          "scale": {"scheme": "tableau10"} },
          "tooltip": [{
        "aggregate": "count",
        "type": "quantitative"}]
            }
  }
  